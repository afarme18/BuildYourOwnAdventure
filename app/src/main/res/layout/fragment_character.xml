<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC4439"
    tools:context=".CharacterFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/guide"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/CharacterRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/guide"
        android:layout_marginBottom="75dp" />

    <Button
        android:id="@+id/CreateNewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CharacterRecyclerView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-60dp"
        android:backgroundTint="#EFB644"
        android:text="Create New"
        android:textColor="#292323" />

</RelativeLayout>