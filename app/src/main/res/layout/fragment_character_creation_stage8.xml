<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC4439"
    tools:context=".CharacterCreationStage8Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/guide9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personality Traits"
        android:layout_below="@id/guide9"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ideal"
        android:layout_below="@id/textView54"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bonds"
        android:layout_below="@id/textView55"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flaws"
        android:layout_below="@id/textView56"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonNext8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide9"
        android:layout_alignParentRight="true"
        android:layout_marginTop="525dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#EFB644"
        android:text="Next"
        android:textColor="#292323" />

    <Button
        android:id="@+id/buttonBack8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide9"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="525dp"
        android:backgroundTint="#EFB644"
        android:text="Back"
        android:textColor="#292323" />

